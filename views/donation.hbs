<section class="banner-sec">
    {{#if msgSuccess}}
        <div id="charge-error" class="alert alert-success">
            {{msgSuccess}}
        </div>
    {{/if}}
    <div class="container">
        <div class="row">
            <div class="container">
                <h3>Donation : {{session.eventTitle}}</h3>
                <hr>
            <div class=" col-md-9 col-lg-9 ">
                <div class="table-responsive">
                <h6>
                    <table class="table table-user-information" align="center">
                        <tbody>
                        <tr style="font-size: 130%">
                            <td>List</td>
                            <td>Amount</td>
                            <td>Action</td>
                        </tr>
                        {{# each donations}}
                            <tr>
                                <td>{{this._id}}</td>
                                <td>{{this.quantity}}</td>
                                <td><a href="/donation/addDonation/{{this._id}}">Add Donation</a></td>
                            </tr>
                        {{/each}}
                        <tr>
                            <td>Others
                                <br>
                                <br>(Click "Add Item" to add new item)</td>
                            <td>------</td>
                            <td><a href="/donation/addItem">Add Item</a></td>
                        </tr>
                        </tbody>
                    </table>
                </h6>
                </div>
            </div>

            </div>
        </div>
    </div>
</section>