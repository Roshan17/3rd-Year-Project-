                //alert("t2");
                if(tel.match(numberslist) && mob.match(numberslist)){
                    return true;
                }
                else{
                    alert("Telephone/Mobile should contain only numbers");
                    return false;
                }
            }
            else{
                alert("Invalid telephone/mobile number");
                return false;
            }
        }
        else{
            //alert("F1");
            return false;
        }
    }

    
