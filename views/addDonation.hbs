<section class="banner-sec">
    <div class="container">
        <div class="row">
            <div class="container">
                <h3>Add Donations : {{session.eventTitle}}</h3>
                <hr>
                {{#if messages}}
                    {{# each messages }}
                        <div class="alert alert-danger">
                            {{this.msg}}
                        </div>
                    {{/each}}
                {{/if}}
                <form action="/donation/addDonation" method="post">
                    <div class="form-group col-lg-4">
                        <label for="formGroupPostDonor">Donor Name</label>
                        <input type="text" class="form-control" id="formGroupdonor" placeholder="Name" name="donorName">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="formGroupMobile">Mobile Number</label>
                        <input type="number" class="form-control" id="formGroupMobile" placeholder="valid mobile number" name="mobile">
                    </div>
                    <div class="form-group col-lg-4">
                        <input type="hidden" class="form-control" id="formGroupItem"  placeholder="New Item Name" name="itemName" value="{{itemName}}">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="formGroupPost">{{session.itemName}} (Amount)</label>
                        <input type="number" class="form-control" id="formGroupAmount" placeholder="Amount" name="amount">
                    </div>
                    <div class="form-group col-lg-4">
                        <input type="hidden" class="form-control" id="formGroupCsrf"  name="_csrf" value="{{csrfToken}}">
                    </div>
                    <div class="form-group col-xs-4">
                        <button type="submit" class="btn btn-primary" name="submit" value="create">Donate</button>
                        <a href="/donation/" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>