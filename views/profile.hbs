<!--
    this file is "view profile" page
-->

<form method="post" enctype="multipart/form-data" action="/profile/">
<HR>

    {{#if anymsg}}
    <!-- executes only if profile updated-->
    <script>alert("Your settings have been saved");</script>
    {{/if}}

    {{#if anymsg2}}
    <!-- executes only if profile updated-->
    <script>alert("Your password changed successfully");</script>
    {{/if}}

<hr>

<center>
    <h3 class="heading-small">Your Information</h3>
<table>
<tr><td class="form-group">
    <label for="exampleInputEmail1">NIC</label></td><td>
    <input type="text" class="form-control"  placeholder="Email" value="{{ user.nic }}" disabled>
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">Gender</label></td><td>
    <input type="text" class="form-control"  placeholder="Email" value="{{ user.gender }}" disabled>
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">First Name</label></td><td>
    <input type="text" class="form-control"  placeholder="" value="{{ user.firstName }}" disabled>
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">Last Name</label></td><td>
    <input type="text" class="form-control"  placeholder="" value="{{ user.lastName }}" disabled>
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">Mobile</label></td><td>
    <input type="tel" class="form-control"  placeholder="" value="{{user.mobile}}" disabled>
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">role</label></td><td>
    <input type="text" class="form-control"  placeholder="" value="{{ user.role }}" disabled>
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">District</label></td><td>
    <input type="text" class="form-control"  placeholder="" value="{{ user.district }}" disabled>
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">Image</label></td><td>
    <img src="/images/profilepics/{{user.nic}}" style="width: 30px; height: 30px;">
</td></tr>


</table>

{{ user.firstName }}
</center>

<!--button type="submit" class="btn btn-default">Submit</button-->
</form>



