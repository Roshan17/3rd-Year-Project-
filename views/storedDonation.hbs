<script> var count = 1;</script>
<section class="banner-sec">
    {{#if msgSuccess}}
        <div id="charge-error" class="alert alert-success">
            {{msgSuccess}}
        </div>
    {{/if}}
    <div class="container">
        <div class="row">
            <div class="container">
                <div class=" col-md-9 col-lg-9 ">
                    <div class="text-center">
                        <a href="/donation/storedDonations/Food(Non-Perishable Only)" class="btn btn-primary">Food(Non-Perishable Only)</a>
                        <a href="/donation/storedDonations/Clothing & Household Items" class="btn btn-warning">Clothing & Household Items</a>
                        <a href="/donation/storedDonations/Baby Items" class="btn btn-info">Baby Items</a>
                        <a href="/donation/storedDonations/Medical Supplies" class="btn btn-success">Medical Supplies</a>
                    </div>
                </div>
                <hr>
                <h4>{{session.donationType}} Donations | {{session.eventTitle}}</h4>
                <hr>
                <br>
                <div class=" col-md-9 col-lg-9 ">
                    <div class="table-responsive">
                        <div class="text-center">
                            <h6>
                                <table class="table table-user-information" align="center">
                                    <tbody>
                                    <tr style="font-size: 130%">
                                        <td>#</td>
                                        <td>List</td>
                                        <td>Amount</td>
                                    </tr>
                                    {{# each donations}}
                                        <tr>
                                            <td><script>document.write(count)</script></td>
                                            <td>{{this._id}}</td>
                                            <td>{{this.quantity}}</td>
                                        </tr>
                                        <script>count ++;</script>
                                    {{/each}}
                                    </tbody>
                                </table>
                            </h6>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>