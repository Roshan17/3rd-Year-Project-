<section class="banner-sec">
    <div class="container">
        <div class="row">
            <div class="container">
                <h3>Update Disaster Event</h3>
                <hr>
                {{#if messages}}
                    {{# each messages }}
                        <div class="alert alert-danger">
                            {{this.msg}}
                        </div>
                    {{/each}}
                {{/if}}
                <form method="post" action="/event/updateEvent" enctype="multipart/form-data">
                {{# each result}}
                    <div class="form-group">
                        <label for="formGroupPostTitle">Disaster Title</label>
                        <input type="text" class="form-control" id="formGroupPostTitle" placeholder="Title" name="title" value="{{this.title}}">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Upload Image</label><br>
                        (Click to Change Event picture)
                        <input type="file"  id="formGroupImage" name="eventImage">
                    </div>
                    <div class="form-group col-xs-4">
                        <button type="submit" class="btn btn-primary" name="submit" value="create" onclick="return confirm('Are You Sure ' +
                         'You want to Update The Disaster Situation..?');">Update Now</button>
                        <a href="/" class="btn btn-danger"
                           onclick="return confirm('Are You Sure ' +
                         'You want to cancel this Process..?');">Cancel</a>
                    </div>
                    {{/each}}
                </form>
            </div>
        </div>
    </div>
</section>


