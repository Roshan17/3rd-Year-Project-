<!--
    this file is "change password" page
-->

<form method="post" action="/profile/savePassword/" onsubmit="return validate()" >

<center>
    <h3 class="heading-small">You are about to change your login password</h3>
<table>
<tr><td class="form-group">
    <label for="exampleInputEmail1">Current password</label></td><td>
    <input type="password" class="form-control"  placeholder="current password" name="currentPassword" >
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">New password</label></td><td>
    <input type="password" class="form-control" id="pass1" name="pass1" placeholder="new password"  >
</td></tr>

<tr><td class="form-group">
    <label for="exampleInputEmail1">Confirm new password</label></td><td>
    <input type="password" class="form-control" id="pass2" name="pass2" placeholder="re-type new password" >
</td></tr>

<tr><td class="form-group">
    <input type="submit" value="OK"class="btn btn-primary" /></td>
    <td></td>
    <td><a href="/" ><input type="button" value="Cancel" onclick="return confirm('Are You Sure you Want To change your password?')"></a></td>
    
</tr>

</table>

<!--testing output-->
{{ user.firstName }}
</center>

<!--button type="submit" class="btn btn-default">Submit</button-->
</form>

<script>
    function validate(){
        
        var p1=document.getElementById("pass1").value;
        var p2=document.getElementById("pass2").value;
        
        if(p1=="" || p1==null){
            alert("Any of the passwords cannot be empty");
            return false;
        }
        else if(p1.length<4){
            alert("Password should be atleast 4 charactors long");
            return false;
        }
        else if(p1==p2)    
            return confirm('Are You Sure you Want To change your password?');
        else{
            alert("New password and re-typed password doesn't match");
            return false;
        }
    }
</script>