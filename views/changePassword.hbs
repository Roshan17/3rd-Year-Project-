<section class="section-01">
    <div class="container">
        <h4>Change Your Login Password</h4>
        <div class="row">
            <hr>
            <div class="col-sm-3"><!--left col-->


                <div class="text-center">
                    <img src="{{user.profileImage}}" class="avatar img-circle img-thumbnail" alt="avatar">
                </div>
            </div>
            <br>
            <ul class="list-group">
                {{#if messages}}
                        <div class="alert alert-danger">
                            {{messages}}
                        </div>
                {{/if}}
                <form method="post" action="/profile/savePassword" onsubmit="return validate()" >


                    <div class="form-group">
                        <label for="exampleInputEmail1">Current password</label>
                        <input type="password" class="form-control"  placeholder="current password" name="currentPassword" >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">New password</label>
                        <input type="password" class="form-control" id="pass1" name="pass1" placeholder="new password"  >
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Confirm new password</label>
                        <input type="password" class="form-control" id="pass2" name="pass2" placeholder="re-type new password" >
                    </div>
                    <div class="form-group col-xs-4">
                        <button type="submit" class="btn btn-primary" name="submit" value="create">Change Password</button>
                        <a href="/" class="btn btn-danger"
                           onclick="return confirm('Are You Sure you Want To Cancel This Process..?')">Cancel</a>
                    </div>


                    <!--testing output-->

                    <!--button type="submit" class="btn btn-default">Submit</button-->
                </form>

            </ul>








            <hr>
        </div>
    </div>

</section>


<script>
    function validate(){

        var p1=document.getElementById("pass1").value;
        var p2=document.getElementById("pass2").value;

        if(p1=="" || p1==null){
            alert("Any of the passwords cannot be empty");
            return false;
        }
        else if(p1.length<4){
            alert("Password should be atleast 4 charactors long");
            return false;
        }
        else if(p1==p2)
            return confirm('Are You Sure you Want To change your password?');
        else{
            alert("New password and re-typed password doesn't match");
            return false;
        }
    }
</script>
