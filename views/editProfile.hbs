                </td>
            </tr>

            <tr>
                <td class="form-group">
                    <label for="exampleInputEmail1">District</label>
                </td>
                <td>
                    <!--input type="text" class="form-control" name="district" id="district" placeholder="District" value="{{ user.district }}"-->
                    <select class="custom-select" id="district" name="district" onchange="selectProvince(this.value);">
                        <option value="{{user.district}}" selected>{{ user.district }}</option>
                        <option value="Ampara" {{#if user.district}}{{/if}} >Ampara</option>
                        <option value="Anuradhapura">Anuradhapura</option>
                        <option value="Badulla">Badulla</option>
                        <option value="Batticaloa">Batticaloa</option>
                        <option value="Colombo">Colombo</option>
                        <option value="Galle">Galle</option>
                        <option value="Gampaha">Gampaha</option>
                        <option value="Hambantota">Hambantota</option>
                        <option value="Jaffna">Jaffna</option>
                        <option value="Kalutara">Kalutara</option>
                        <option value="Northern">Northern</option>
                        <option value="Kandy">Kandy</option>
                        <option value="Kegalle">Kegalle</option>
                        <option value="Kilinochchi">Kilinochchi</option>
                        <option value="Kurunegala">Kurunegala</option>
                        <option value="Mannar">Mannar</option>
                        <option value="Matale">Matale</option>
                        <option value="Matara">Matara</option>
                        <option value="Monaragala">Monaragala</option>
                        <option value="Mullaitivu">Mullaitivu</option>
                        <option value="NuwaraEliya">Nuwara Eliya</option>
                        <option value="Polonnaruwa">Polonnaruwa</option>
                        <option value="Puttalam">Puttalam</option>
                        <option value="Ratnapura">Ratnapura</option>
                        <option value="Trincomalee">Trincomalee</option>
                        <option value="Vavuniya">Vavuniya</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td class="form-group">
                    <label for="">Province</label>
                </td>
                <td>
                    <input type="text" id="province" name="province" class="form-control" placeholder="" disabled>
                </td>
            </tr>

            <tr>
                <td class="form-group">
                    <label for="">Image</label>
                </td>
                <td>
                    <input type="file" class="form-control" placeholder="" name="file" > 
                    <img src="/images/profilepics/{{user.nic}}" style="width: 30px; height: 30px;">
                </td>
            </tr>


        </table>
        <input type="submit" class="btn btn-success" value="OK">
        <a href="/"><input type="button" class="btn btn-dark" value='Cancel'></a>

        {{ user.firstName }}
    </center>

    
</form>

<script>
    function selectProvince(district){
        var province;
        if(district=="Monaragala" || district=="Badulla")
            province="Uva";
        else if(district=="Matara" || district=="Galle" || district=="Hambantota")
            province="South";
        else if(district=="Colombo" || district=="Gampaha" || district=="Kalutara")
            province="Western";

        else if(district=="Ampara" || district=="Batticaloa" || district=="Trincomalee")
            province="Eastern";
        else if(district=="Kandy" || district=="NuwaraEliya" || district=="Matale" )
            province="Central";
        else if(district=="Ratnapura" || district=="Kegalle" )
            province="Sabaragamuwa";

        else if(district=="Jaffna" || district=="Kilinochchi" || district=="Mannar")
            province="North";
        else if(district=="Anuradhapura" || district=="Polonnaruwa" )
            province="North central";
        else if(district=="Puttalam" || district=="Kurunegala" )
            province="North western";

        else
            province="unknown"

        //alert(province); //for testing
        document.getElementById('province').value=province;   
    }
    
    document.onload(selectProvince(document.getElementById("district").value));
</script>