<form method="post" action="/profile/saveProfile/" onsubmit="return confirm('Are you sure you want yo save your changes?');" enctype="multipart/form-data">

<input type="text" name="unic" id="unic" value="{{ user.nic }}" hidden>

    <center>
        <h3 class="heading-small">Edit Your Information</h3>
        <table>
            <tr>
                <td class="form-group">
                    <label for="exampleInputEmail1">NIC</label>
                </td>
                <td>
                    <input type="text" class="form-control" placeholder="" value="{{ user.nic }}" disabled>
                </td>
            </tr>

            <tr>
                <td class="form-group">
                    <label for="exampleInputEmail1">Gender</label>
                </td>
                <td>
                    <input type="text" class="form-control" placeholder="Gender" value="{{ user.gender }}" disabled>
                </td>
            </tr>

            <tr>
                <td class="form-group">
                    <label for="exampleInputEmail1">First Name</label>
                </td>
                <td>
                    <input type="text" class="form-control" placeholder="First Name" value="{{ user.firstName }}" disabled>
                </td>
            </tr>

            <tr>
                <td class="form-group">
                    <label for="exampleInputEmail1">Last Name</label>
                </td>
                <td>
                    <input type="text" class="form-control" placeholder="Last Name" value="{{ user.lastName }}" disabled>
                </td>
            </tr>

            <tr>
                <td class="form-group">
                    <label for="exampleInputEmail1">Mobile</label>
                </td>
