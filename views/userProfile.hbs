<script src="/javascripts/new.js"></script>
<section class="banner-sec">
    <div class="text-center">
        <h4><strong>System User </strong> : {{result.0.firstName}} {{result.0.lastName}}</h4>
    </div>
    <hr>
    <form action="/operations/userEditRole" method="post">
    <div class="container">
        <div class="row">
            <div class="col-sm" align="center">
                <div class="form-group col-lg-4">
                <div class="text-center">
                    <label for="exampleInputStatus"><strong>System User Type</strong></label>
                </div>
                <select class="custom-select" id="inputGroupSelect01" name="role">
                    <option selected value="{{result.0.role}}">{{result.0.role}}</option>
                    {{#if session.visible}}
                    <option value="Admin">Admin</option>
                    <option value="Super Volunteer">Super Volunteer</option>
                    <option value="Volunteer">Volunteer</option>
                    <option value="Donor">Donor</option>
                    {{/if}}
                </select>
            </div>
                <input type="hidden" class="form-control" id="formGroupId"  name="_id" value="{{result.0._id}}">
                <input type="hidden" class="form-control" id="formGroupCsrf1"  name="_csrf" value="{{csrfToken}}">
                <button type="submit" class="btn btn-success" name="submit" value="create">Change Role Now &raquo;</button>
                <hr>
            </div>
        <div class="row">
            <hr>
            <div class="col-sm-3"><!--left col-->


                <div class="text-center">
                    <img src="{{result.0.profileImage}}" class="avatar img-circle img-thumbnail" alt="avatar">
                    <h6>Profile Picture</h6>
                </div>
            </div>
                </hr>
                <br>



                <ul class="list-group">
                    <table class="table table-user-information" align="center">
                        <tbody>
                        {{#each result}}
                        <tr>
                            <td>Name</td>
                            <td>{{this.firstName}} {{this.lastName}}</td>
                        </tr>
                        <tr>
                            <td>Role</td>
                            <td>{{this.role}}</td>
                        </tr>
                        <tr>
                            <td>Gender</td>
                            <td>{{this.gender}}</td>
                        </tr>
                        <tr>
                            <td>Address</td>
                            <td>{{this.province}} / {{this.district}}</td>
                        </tr>
                        <tr>
                            <td>Contact</td>
                            <td>{{this.mobile}} / {{this.phone}}</td>
                        </tr>

                        {{/each}}
                        </tbody>
                    </table>
                </ul>



            <hr>
        </div>
            {{#if session.eventID}}
        <a class="btn btn-warnings" href="/donation/orderedDonations" role="button">See Ordered Donations</a>
            {{/if}}
    </div>
    </div>
    </form>
</section>

