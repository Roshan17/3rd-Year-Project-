<section class="banner-sec">
    <div class="container">
        <div class="row">
            <div class="container">
                <h3>Update News : {{session.eventTitle}}</h3>
                <hr>
                {{#if messages}}
                    {{# each messages }}
                        <div class="alert alert-danger">
                            {{this.msg}}
                        </div>
                    {{/each}}
                {{/if}}
                {{# each result}}
                <form method="post" action="/news/updateNews" enctype="multipart/form-data">
                    <div class="form-group col-lg-4">
                        <label for="formGroupPostTitle">Post Title</label>
                        <input type="text" class="form-control" id="formGroupPostTitle" placeholder="Title" name="title" value="{{this.title}}">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="formGroupExampleInput2">News Description</label>
                        <textarea class="form-control" rows="3" name="description" placeholder="Type Here When Need to Update News Description"></textarea>
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="formGroupExampleInput2">Upload Image</label><br>
                        (Click to Change News Picture)
                        <input type="file"  id="formGroupImage" name="newsImage">
                    </div>
                    <div class="form-group col-xs-4">
                        &nbsp&nbsp&nbsp<button type="submit" class="btn btn-primary" name="submit" value="create" onclick="return confirm('Are You Sure ' +
                         'You want to Update This News..?');">Update Now</button>
                        <a href="/newsFeed" class="btn btn-danger"
                           onclick="return confirm('Are You Sure ' +
                         'You want to cancel this Process..?');">Cancel</a>
                    </div>
                    {{/each}}
                </form>
            </div>
        </div>
    </div>
</section>


