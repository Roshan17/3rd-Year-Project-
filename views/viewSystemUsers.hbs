<section class="banner-sec">
<div class="container">
    <div class="row">
        <div class="container">
            <h3>System Users</h3>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {{# each result}}
                    <tr>
                        <td>{{this.firstName}}</td>
                        <td>{{this.lastName}}</td>
                        <td>{{this.role}}</td>
                        <td>
                            <a href="/operations/userProfile/{{this._id}}" class="btn btn-success">View Profile</a>
                            <a href="#" class="btn btn-danger">Block User</a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</section>