<section class="banner-sec">
    <div class="container">
        <div class="row">
            <div class="container">
                <h3>Create Disaster Event</h3>
                <hr>
                {{#if messages}}
                    {{# each messages }}
                        <div class="alert alert-danger">
                            {{this.msg}}
                        </div>
                    {{/each}}
                {{/if}}
                {{#if noErr}}
                    <div class="alert alert-success">
                        {{msgSuccess}}
                    </div>
                {{/if}}
                <form method="post" action="/event/publish" enctype="multipart/form-data">
                    <div class="form-group col-lg-4">
                        <label for="formGroupPostTitle">Disaster Title</label>
                        <input type="text" class="form-control" id="formGroupPostTitle" placeholder="Title" name="title">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="formGroupExampleInput2">Upload Image</label><br>
                        <input type="file"  id="formGroupImage" name="eventImage">
                    </div>
                    <div class="form-group col-xs-4">
                        <button type="submit" class="btn btn-primary" name="submit" value="create" onclick="return confirm('Are You Sure ' +
                         'You want to Announce New Disaster Situation..?');">Create Now</button>
                        <a href="/" class="btn btn-danger"
                           onclick="return confirm('Are You Sure ' +
                         'You want to cancel this Process..?');">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


