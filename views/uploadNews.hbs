<section class="banner-sec">
    <div class="container">
        <div class="row">
            <div class="container">
            <h3>Publish News : {{session.eventTitle}}</h3>
            <hr>
                {{#if messages}}
                    {{# each messages }}
                        <div class="alert alert-danger">
                            {{this.msg}}
                        </div>
                    {{/each}}
                {{/if}}
                {{#if noErr}}
                        <div class="alert alert-success">
                            {{msgSuccess}}
                        </div>
                {{/if}}
            <form method="post" action="/news/publish" enctype="multipart/form-data">
                <div class="form-group col-lg-4">
                    <label for="formGroupPostTitle">Post Title</label>
                    <input type="text" class="form-control" id="formGroupPostTitle" placeholder="Title" name="title">
                </div>
                <div class="form-group col-lg-4">
                    <label for="formGroupExampleInput2">News Description</label>
                    <textarea class="form-control" rows="3" name="description" placeholder="Type News Here"></textarea>
                </div>
                <div class="form-group col-lg-4">
                    <label for="formGroupExampleInput2">Upload Image</label><br>
                    <input type="file"  id="formGroupImage" name="newsImage">
                </div>
                <div class="form-group col-xs-4">
                    &nbsp&nbsp&nbsp<button type="submit" class="btn btn-primary" name="submit" value="create">Upload</button>
                    <a href="/newsFeed" class="btn btn-danger"
                       onclick="return confirm('Are You Sure ' +
                         'You want to cancel this Process..?');">Cancel</a>
                </div>
            </form>
        </div>
        </div>
    </div>
</section>


