<section class="banner-sec">
    <div class="container">
        <div class="row">
            <div class="container">
            <h3>Publish News : {{session.eventTitle}}</h3>
            <hr>
            <form method="post" action="#">
                <div class="form-group">
                    <label for="formGroupPostTitle">Post Title</label>
                    <input type="text" class="form-control" id="formGroupPostTitle" placeholder="Title" name="title">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">News Description</label>
                    <textarea class="form-control" rows="3" name="news" placeholder="Type News Here"></textarea>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Upload Image</label><br>
                    <input type="file"  id="formGroupImage" name="image">
                </div>
                <div class="form-group col-xs-4">
                    <button type="submit" class="btn btn-primary" name="submit" value="create">Upload</button>
                    <a href="/newsFeed" class="btn btn-danger"
                       onclick="return confirm('Are You Sure ' +
                         'You want to cancel this Process..?');">Cancel</a>
                </div>
            </form>

        </div>
        </div>
    </div>
</section>


