<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
<link rel="stylesheet" href="/stylesheets/chat.css">
<style>
    input {
        padding: 10px 20px;
        box-sizing: border-box;
        background: #eee;
        border: 0;
        display: block;
        width: 100%;
        background: #fff;
        border-bottom: 1px solid #eee;
        font-family: Nunito;
        font-size: 16px;
    }
</style>
<section class="banner-sec">
    <div class="container">
        <div id="mario-chat" style="margin-top: 0px">
            <div class="container">

                <div class="text-center"><h2 style="
    font-size: 18px;
    padding: 10px 20px;
    color: #1f2121;
">Device Message Box : {{session.eventTitle}}</h2></div>
                <div id="chat-window">
                    <div class="container" style="max-width: 970px;">
                        <div class="row">
                            <div id="output">
                                {{#each messages}}
                                    {{# each this}}
                                <p><img src="/images/device.jpg" class="rounded" alt="..." height="30px" width="30px">
                                    <strong>{{this.deviceAddress}} :</strong> {{this.message}}
                                    <br>
                                    &nbsp&nbsp&nbsp<i class="fa fa-clock-o" aria-hidden="true"></i>  <em><small>{{this.time}}</small></em>
                                </p>
                                    {{/each}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>
</section>


