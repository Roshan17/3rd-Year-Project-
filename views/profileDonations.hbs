
<section class="banner-sec">
    <div class="text-center">
    <h3>Donation : {{session.eventTitle}}</h3>
    </div>
    <div class="container">
            <div class="row">
                <hr>
                <div class="col-sm-2"><!--left col-->

                    {{#if donations}}
                    <div class="text-center">
                        <img src="{{donations.0.profileImage}}" class="avatar img-circle img-thumbnail" alt="avatar">
                        <h6>{{donations.0.donorName}}</h6>
                    </div>
                    {{else}}
                        <div class="text-center">
                            <img src="{{session.profileImage}}" class="avatar img-circle img-thumbnail" alt="avatar">
                            <h6>{{session.donorName}}</h6>
                        </div>
                    {{/if}}
                </div>
                </hr>
                <br>



                <ul class="list-group">
                    <table class="table table-user-information" align="center">
                        <tbody>
                        <tr style="font-size: 130%">
                            <td>Donation List</td>
                            <td>Amount</td>
                        </tr>
                        {{#each donations}}
                            <tr>
                                <td>{{this._id}}</td>
                                <td>{{this.quantity}}</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                    <hr>
                    {{#if donations}}
                    <h6><strong>Contact Number</strong> : {{donations.0.mobile}}</h6>
                    {{else}}
                        <h6><strong>Contact Number</strong> : {{session.mobile}}</h6>
                        {{/if}}
                </ul>
                <hr>
            </div>
        <a class="btn btn-warnings" href="/donation/userOrderedDonations" role="button">See Ordered Donations</a>
        <a class="btn btn-warnings" href="/donation/userOfferedDonations" role="button">See Offered Donations</a>
    </div>

</section>

